<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ConcertApp.MAUI.Views.PerformancePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:ConcertApp.MAUI.ViewModels"
    xmlns:local="clr-namespace:ConcertApp.MAUI.Views"
    Title="Concert Performances">

    <VerticalStackLayout Padding="20">
        <Label Text="Performances for this Concert" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Performances}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                            <Label Text="{Binding DateTime}" FontSize="14" TextColor="Gray"/>
                            <Label Text="{Binding Location}" FontSize="14" TextColor="Gray"/>
                            <Label Text="{Binding ID}" FontSize="14" TextColor="Gray"/>

                            <!-- Replace Switch with Button -->
                            <Button Text="Create Booking" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ToggleBookingCommand}"
                                    CommandParameter="{Binding ID}"
                                     
                                     />

                            <!-- Message Label for already booked status -->
                            <Label Text="{Binding Message}" FontSize="14" TextColor="Red" IsVisible="{Binding IsBooked}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ConcertApp.MAUI"
             x:Class="ConcertApp.MAUI.Views.BookingPage"
             Title="Bookings">

    

    <StackLayout>
         <!--Title for the bookings section--> 
        <Label Text="Your Bookings"
               FontSize="24"
               HorizontalOptions="Center"
               Padding="20" />
        

         <!--CollectionView to display the list of bookings--> 
        <CollectionView ItemsSource="{Binding Bookings}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="10" BorderColor="LightGray" CornerRadius="5">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackLayout Grid.Column="0">
                                <Label Text="{Binding Name}" FontSize="18" />
                                <Label Text="{Binding Email}" FontSize="14" TextColor="Gray" />
                                <Label Text="{Binding PerformanceID, StringFormat='Performance ID: {0}'}" FontSize="14" TextColor="Gray" />

                            </StackLayout>
                            <Button Text="Cancel Booking"
        FontSize="14"
        FontAttributes="Bold"
        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteBookingCommand}"
        CommandParameter="{Binding ID}"
        Grid.Column="1"
        VerticalOptions="Center"
        Padding="10, 5"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
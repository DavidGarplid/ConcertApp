<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ConcertApp.MAUI.Views.ConcertPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConcertApp.MAUI.Views"
    Title="Available Concerts">

    <VerticalStackLayout Padding="20">
        <Label Text="Select a Concert" 
               FontSize="24" 
               FontAttributes="Bold" 
                HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Concerts}" SelectionMode="Single" 
                        SelectedItem="{Binding SelectedConcert, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5">
                        <Grid>
                            <Button Text="{Binding Name}" FontSize="18" FontAttributes="Bold" Command="{Binding NavigateToPerformancesCommand}" CommandParameter="{Binding ID}"/>
                            <Button Text="{Binding Description}" FontSize="14" TextColor="White" Command="{Binding NavigateToPerformancesCommand}" CommandParameter="{Binding ID}"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Logout" Command="{Binding LogoutCommand}" />
    </VerticalStackLayout>
    
    
    
</ContentPage>